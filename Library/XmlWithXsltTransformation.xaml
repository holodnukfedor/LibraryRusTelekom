<Window x:Class="Library.XmlWithXsltTransformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize"
        Title="Трансформация Xml с помощью xslt" Height="279" Width="497">
    <Grid>
        <Label Content="Трансфомация xml с помощью xslt"
               FontWeight="Bold" FontFamily="Bookman Old Style"
               VerticalAlignment="Top" HorizontalContentAlignment="Center" Background="#FF4F8015" Foreground="White"
               />
        <Label Content="Входной xml" Background="#FF71EC81" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="InputXml" HorizontalAlignment="Left" Margin="110,42,0,0" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Top" Height="75" Width="267" Background="#FFFFFF0B"
                   TextAlignment="Right"/>
        <Label Content="Xslt схема" Background="#FF71EC81" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="XsltScheme"
            HorizontalAlignment="Left" Margin="110,125,0,0" TextWrapping="Wrap" 
                   Text="{Binding FileName}" VerticalAlignment="Top" Background="#FFFFFF0B" Height="77" Width="267"
                   TextAlignment="Right"/>
        <Button x:Name="InputXmlBtn" Content="Задать" HorizontalAlignment="Left" Margin="382,42,0,0" VerticalAlignment="Top" Width="75" Click="InputXmlBtn_Click"/>
        <Button x:Name="XsltSchemeBtn" Content="Задать" HorizontalAlignment="Left" Margin="382,125,0,0" VerticalAlignment="Top" Width="75"
                Click="XsltSchemeBtn_Click"/>
        <Button x:Name="OutputXml" Content="Задать выходной файл" HorizontalAlignment="Left" Margin="179,207,0,0" VerticalAlignment="Top" Width="146"
                Click="OutputXml_Click"/>

    </Grid>
</Window>
